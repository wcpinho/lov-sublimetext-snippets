\$(".accordion ${1:selector}").click(function(){
    \$(".accordion .accor").slideUp();
    if(\$(this).next().is(":visible")){
        \$(this).next().slideUp();
    }else{
        \$(this).next().slideDown();
    }
});
]]></content>
